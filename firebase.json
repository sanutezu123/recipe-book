{
  "hosting": {
    "public": "dist/First-App",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "redirects": [
    {
      "source": "/auth",
      "destination": "/index.html"
    },
    {
      "source": "**",
      "destination": "/index.html"
    }
  ]
}
